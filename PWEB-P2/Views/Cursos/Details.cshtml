@model PWEB_P2.Models.Curso

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}

<h2 class="pb-2 border-bottom">@Model.Nome</h2>
<p>@Html.Raw(Model.Descricao.Replace(Environment.NewLine, "<br />"))</p>

<div class="row">
    <div class="col-6"><p>@Html.Raw(Model.Descricao.ToString().Replace(Environment.NewLine, "<br />"))</p></div>
    <div class="col-6">
        <div id="carouselExampleControls" class="carousel slide" data-bs-ride="carousel">
            <div class="carousel-inner">
                @{
                    var qtd = 0;
                    foreach (var file in ViewBag.Ficheiros)
                    {
                        var style = qtd == 0 ? "active" : "";
                        <div class="carousel-item @style">
                            <img src="@file" class="d-block w-100" alt="...">
                        </div>
                        qtd++;
                    }
                }
            </div>
            <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Previous</span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Next</span>
            </button>
        </div>
    </div>
</div>

<div class="row g-4 py-5 row-cols-1 row-cols-lg-2">

    <div class="feature col">
        <div class="feature-icon d-inline-flex align-items-center justify-content-center text-bg-primary bg-gradient fs-2 mb-3">
            <svg class="bi" width="1em" height="1em"><use xlink:href="#people-circle"></use></svg>
        </div>
        <h3 class="fs-2">Requisitos</h3>
        <p>@Html.Raw(Model.Requisitos.Replace(Environment.NewLine, "<br />"))</p>

    </div>
    <div class="feature col">
        <div class="feature-icon d-inline-flex align-items-center justify-content-center text-bg-primary bg-gradient fs-2 mb-3">
            <svg class="bi" width="1em" height="1em"><use xlink:href="#toggles2"></use></svg>
        </div>
        <h3 class="fs-2">Custo</h3>
        <p>@Model.Preco euros </p>

    </div>
</div>


<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
